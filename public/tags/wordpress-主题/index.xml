    &lt;/tr&gt;
    
    &lt;tr&gt;
      &lt;td width=&#34;189&#34; valign=&#34;top&#34;&gt;
        admin_email
      &lt;/td&gt;
      
      &lt;td width=&#34;189&#34; valign=&#34;top&#34;&gt;
        管理员的邮箱
      &lt;/td&gt;
      
      &lt;td width=&#34;189&#34; valign=&#34;top&#34;&gt;
        admin@webfuns.cn
      &lt;/td&gt;
    &lt;/tr&gt;
    
    &lt;tr&gt;
      &lt;td width=&#34;189&#34; valign=&#34;top&#34;&gt;
        version
      &lt;/td&gt;
      
